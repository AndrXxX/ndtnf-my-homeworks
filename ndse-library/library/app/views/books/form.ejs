<form method="POST" class="mt-5" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputAuthors">Авторы</label>
        <input type="text" value="<%= book.authors %>" name="authors" class="form-control" id="inputAuthors">
    </div>
    <div class="form-group">
        <label for="inputTitle">Название</label>
        <input type="text" value="<%= book.title %>" name="title" class="form-control" id="inputTitle">
    </div>
    <div class="form-group">
        <label for="inputDesc">Описание</label>
        <textarea rows="3" name="description" class="form-control" id="inputDesc"><%= book.description %></textarea>
    </div>

    <div class="form-group">
        <label for="fileCover">Обложка</label>
        <% if (book.fileCover) { %>
            <div class="w-25">
                <img class="card-img-top" src="/books/<%= book.id %>/download-cover" alt="Обложка книги">
            </div>
        <% } %>
        <input type="file" class="form-control-file" id="fileCover" name="fileCover">
    </div>
    <div class="form-group">
        <label for="fileName">Файл книги</label>
        <% if (book.fileName) { %>
            <a class="btn btn-sm m-2 btn-primary" href="/books/<%= book.id %>/download-file">
                <i class="fa fa-cloud-download" aria-hidden="true"></i> Загружен
            </a>
        <% } %>
        <input type="file" class="form-control-file" id="fileName" name="fileName">
    </div>
    <div class="form-check">
        <input type="checkbox" value="true" <%= book.favorite ? "checked" : "" %> name="favorite" class="form-check-input" id="inputFavorite">
        <label for="inputFavorite" class="form-check-label">Избранное</label>
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>
